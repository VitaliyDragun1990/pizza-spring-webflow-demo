       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pricingEngine" class="com.pizza.service.PricingEngineImpl" />

    <bean id="customerService" class="com.pizza.service.CustomerServiceImpl"/>

